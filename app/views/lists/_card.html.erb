<div class="card">
  <%= cl_image_tag list.photo.key, alt: list.name, style: 'width: 100%; height: 200px; object-fit: cover;' %>
  <div class="card-body">
    <h5><%= link_to list.name, list, class: 'text-decoration-none' %></h5>
    <%= link_to 'Remove', list_path(list),
                              data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                              class: 'btn btn-sm btn-danger mt-2' %>
  </div>
</div>
