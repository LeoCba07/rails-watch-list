<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h1><%= @list.name %></h1>
          <h3>Add a bookmark to this list:</h3>
          <%= simple_form_for [@list, @bookmark] do |f| %>
            <%= f.association :movie %>
            <%= f.input :comment %>
            <%= f.submit 'Add Movie', class: 'btn btn-primary' %>
          <% end %>
          <h3 class="mt-4">Movies in this list:</h3>
          <% if @list.bookmarks.any? %>
            <div class="row">
              <% @list.bookmarks.each do |bookmark| %>
                <div class="col-md-6 mb-4">
                  <div class="card h-100">
                    <div class="row g-0">
                      <div class="col-4">
                        <%= image_tag bookmark.movie.poster_url,
                            alt: bookmark.movie.title,
                            class: 'img-fluid rounded-start h-100',
                            style: 'object-fit: cover;' %>
                      </div>
                      <div class="col-8">
                        <div class="card-body d-flex flex-column h-100">
                          <h5 class="card-title"><%= bookmark.movie.title %></h5>
                          <p class="card-text text-muted small mb-2">
                            <i class="fas fa-star text-warning"></i> <%= bookmark.movie.rating.to_i %>
                          </p>
                          <p class="card-text flex-grow-1"><%= bookmark.comment %></p>
                          <%= link_to 'Remove', bookmark_path(bookmark),
                              data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                              class: 'btn btn-sm btn-danger mt-2' %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No movies added yet.</p>
          <% end %>
          <div class="mt-4">
            <%= link_to 'Back', lists_path, class: 'btn btn-light' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
