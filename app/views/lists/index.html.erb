<%= render 'lists/navbar'%>
<div class="banner">
  <%= image_tag 'banner' %>
  <div class="banner-text">
    <h2>Access your favorite movies</h2>
    <p>Anywhere, anytime.</p>
  </div>
</div>
<div class="container mt-3">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <% @lists.each do |list| %>
        <article class="mb-3">
          <%= render 'lists/card', list: list %>
        </article>
      <% end %>
    </div>
  </div>
</div>
<%= render 'lists/footer'%>
